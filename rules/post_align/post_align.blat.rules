# -*- mode: Snakemake -*-
# Post-Alignment Processing: BLAT

rule post_align:
  input:
    sampleR1="process/aligned/{sample}.R1.psl.gz",
    sampleR2="process/aligned/{sample}.R2.psl.gz",
    keyR1="process/consolidated/{sample}.R1.csv",
    keyR2="process/consolidated/{sample}.R2.csv"
  output:
    uniq="process/processedData/uniqSites/{sample}.uniq.csv",
    chimera="process/processedData/chimeras/{sample}.chimera.rds",
    multihit="process/processedData/multihits/{sample}.multihits.rds"
  params:
    ROOT_DIR
  shell:
    """
    TOOL="{params.ROOT_DIR}/tools/blatCoupleR/blatCouple.R"
    Rscript ${TOOL} {input.sampleR2} {input.sampleR1} \
      -k {input.keyR2} {input.keyR1} \
      -o {output.uniq} --chimera {output.chimera} --multihit {output.multihit}
    """

