# -*- mode: Snakemake -*-
# Sequence Consolidating Rules

rule consolidate:
  input:
    "{sample}.{read}.trim.fastq.gz"
  output:
    consol="{sample}.{read}.consol.fasta",
    key="{sample}.{read}.key.csv"
  shell:
    """
    TOOL="{ROOT_DIR}/tools/seqConsolidateR/seqConsolidate.R"
    Rscript ${{TOOL}} {RUN_DIR}/process/trimmed/{input} \
      -o {RUN_DIR}/process/consolidated/{output.consol} \
      -k {RUN_DIR}/process/consolidated/{output.key}
    """

