# -*- mode: Snakemake -*-
# Sequence Consolidating Rules

rule consolidate:
  input:
    sample=process/trimmed/{sample}.{read}.trim.fastq.gz
  output:
    consol=process/consolidated/{sample}.{read}.consol.fasta,
    key=process/consolidated/{sample}.{read}.key.csv
  params:
    ROOT_DIR
  shell:
    """
    TOOL="{params.ROOT_DIR}/tools/seqConsolidateR/seqConsolidate.R"
    Rscript ${TOOL} {input.sample} -o {output.consol} -k {output.key}
    """

